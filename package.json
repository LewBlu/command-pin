{
  "name": "commandpin",
  "displayName": "CommandPin",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commandpin.helloWorld",
        "title": "Hello World"
      },
	  {
		"command": "commandpin.runCommand",
		"title": "Run Command",
		"icon": "resources/play-solid.svg"
	  }
    ],
	"menus": {
		"view/item/context": [
      		{
				"command": "commandpin.runCommand",
				"when": "view == pinned-commands",
				"group": "inline"
			}
		]
	},
	"viewsContainers": {
      "activitybar": [
        {
          "id": "command-pin",
          "title": "Command Pin",
          "icon": "resources/terminal-solid.svg"
        }
      ]
    },
    "views": {
      "command-pin": [
        {
          "id": "pinned-commands",
          "name": "Pinned Commands",
		  "contents": "Hellow world"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
